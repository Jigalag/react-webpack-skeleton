{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "quotes": [2, "single", { "avoidEscape": true }],
    "no-console": "warn",
    "object-curly-spacing": ["error", "always"],
    "space-before-blocks": "error",
    "space-before-function-paren": "error",
    "react/prop-types": "off"
  }
}
